<header>
  <div class="up_page">
     {{>header}}
      <div class="menu2">
        <nav class="navbar2">
       {{>menu2}}
        </nav>
      </div>
    </div>
  </div>
  {{>menu}}
</header>

<main>
<form  action="/api/sessions/register" method="post">
  <div class="imgcontainer">
    <img
      src="https://i.postimg.cc/T1KzTnz6/3d-casual-life-cat-on-laptop.png"
      alt="Avatar"
      class="avatar"
    />
  </div>

  <div class="container_form">
    {{#if error}}
        <div class="error_message">{{error}}</div>
    {{/if}}
    <label for="name"><b>Name</b></label>
    <input class="form_input"  type="text" placeholder="Enter Name and Surname" name="name" />

    <label for="email"><b>Email</b></label>
    <input class="form_input"  type="email" placeholder="Enter Email" name="email" />

    <label for="password"><b>Password</b></label>
    <input class="form_input"  type="password" placeholder="Enter Password" name="password" />
     <input type="text" name="web" value="web" hidden>

   <div class="button-container_register">
  <button class="button_form" type="submit">Register</button>
</div>
  </div>
</form>
<div class="registration_login">
    <p class="register_msg"> Already registered?</p>
    <a href="/login"><button class="register_login_button">Login</button></a>
</div>
</main>

<footer></footer>

